<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Themes">
	<description>PHP Code Sniffer configuration file for WordPress themes</description>

	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*/deploy/*</exclude-pattern>
	<exclude-pattern>*/vendors/*</exclude-pattern>
	<exclude-pattern>*/wp-core/*</exclude-pattern>
	<exclude-pattern>*/@scripts/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>

	<rule ref="WordPress" />
</ruleset>
